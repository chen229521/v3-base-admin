    "typescript": "~5.6.2",
    "vite": "^5.4.10",
    "vue-tsc": "^2.1.8",
    "tsx": "4.19.1",
    "simple-git-hooks": "2.11.1",
    "sass": "1.80.4",
    "@types/node": "22.7.9"
  },
  "simple-git-hooks": {
    "commit-msg": "pnpm sa git-commit-verify",
    "pre-commit": "pnpm typecheck && pnpm lint-staged"
  }
